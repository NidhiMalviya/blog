
<%= link_to 'New article', new_article_path ,:class => "button btn btn-success"%>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr id="delete_<%= article.id %>">
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), :class => "button btn btn-info" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), :class => "button btn btn-info" %></td>
      <td><%= link_to 'Destroy', article_path(article), :class => "button btn btn-info",
              method: :delete,
              data: { confirm: 'Are you sure?' },remote: true %></td>
    </tr>
  <% end %>
</table>

